Q    https://leetcode.com/problems/remove-duplicates-from-sorted-array-ii/description/?envType=study-plan-v2&envId=top-interview-150


class Solution {
public:
    int removeDuplicates(vector<int>& nums) {
        
        int k = 1;        // next position to insert
        int count = 1;    // count of current number

        for (int i = 1; i < nums.size(); i++) {
            if (nums[i] == nums[i - 1]) {
                count++;
            } else {
                count = 1; // reset count for new number
            }

            if (count <= 2) {
                nums[k] = nums[i];
                k++;
            }
        }

        return k;
    }
};
