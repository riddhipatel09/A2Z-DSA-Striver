Q  https://leetcode.com/problems/word-pattern/submissions/1606541162/?envType=study-plan-v2&envId=top-interview-150


bool wordPattern(string pattern, string s) {
        unordered_map<char,int> m1;
        unordered_map<string,int> m2;

        int i = 0;
        int countTokens = 0;

        stringstream ss(s);
        string token;

        while(ss >> token){
            countTokens++;
            if(i == pattern.size() || m1[pattern[i]] != m2[token])
                return false;
                m1[pattern[i]] = i+1;
                m2[token] = i+1;
                i++;
            
        }
            
        if(countTokens!=pattern.size() || i!=pattern.size())
            return false;
            
        return true;
    
    }
